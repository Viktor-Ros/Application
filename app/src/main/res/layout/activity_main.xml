<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/general_LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/SCROLLER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#3C3F41"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/activity_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <RelativeLayout
                android:id="@+id/eating_RelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#000000">

                <TextView
                    android:id="@+id/fatResult_TextView"
                    android:layout_width="85dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/proteinResult_TextView"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:background="#000000"
                    android:text="Жиры, г"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/fatResultNum_TextView"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/proteinResultNum_TextView"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/fatResult_TextView"
                    android:background="#000000"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/carhydResult_TextView"
                    android:layout_width="85dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/fatResult_TextView"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:background="#000000"
                    android:text="Углеводы, г"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/carhydResultNum_TextView"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/fatResultNum_TextView"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/carhydResult_TextView"
                    android:background="#000000"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/calResult_TextView"
                    android:layout_width="85dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/carhydResult_TextView"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:background="#000000"
                    android:text="Каллории"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/calResultNum_TextView"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/carhydResultNum_TextView"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/calResult_TextView"
                    android:background="#000000"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/proteinResult_TextView"
                    android:layout_width="85dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:background="#000000"
                    android:text="Белки, г"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/proteinResultNum_TextView"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/proteinResult_TextView"
                    android:background="#000000"
                    android:textColor="#FFFFFF" />


            </RelativeLayout>

            <Button
                android:id="@+id/addEating_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Новая трапеза" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>