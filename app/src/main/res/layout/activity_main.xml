<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/SCROLLER1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#3C3F41"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#000000">

                <TextView
                    android:id="@+id/rltw2"
                    android:layout_width="85dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/rltw1"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:background="#000000"
                    android:text="Жиры, г"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/rltw6"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/rltw5"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/rltw2"
                    android:background="#000000"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/rltw3"
                    android:layout_width="85dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/rltw2"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:background="#000000"
                    android:text="Углеводы, г"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/rltw7"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/rltw6"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/rltw3"
                    android:background="#000000"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/rltw4"
                    android:layout_width="85dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/rltw3"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:background="#000000"
                    android:text="Каллории"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/rltw8"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/rltw7"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/rltw4"
                    android:background="#000000"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/rltw1"
                    android:layout_width="85dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:background="#000000"
                    android:text="Белки, г"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/rltw5"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/rltw1"
                    android:background="#000000"
                    android:textColor="#FFFFFF" />


            </RelativeLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Новая трапеза" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>