<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="#000000"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_eat"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="#030000"
        android:gravity="left|center"
        android:text="Whiskey Jim Beam"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_mass"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_below="@id/tv_eat"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:background="#030000"
        android:gravity="left|center"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="#030000"
        android:gravity="left|center"
        android:text="Ккал"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_kkal_num"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_below="@id/textView6"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:background="#030000"
        android:text="0"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:layout_below="@+id/tv_eat"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/tv_mass"
        android:background="#030000"
        android:gravity="center"
        android:text="Белки"
        android:textColor="#FFFFFF"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:layout_below="@+id/tv_eat"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/textView3"
        android:background="#030000"
        android:gravity="center"
        android:text="Жиры"
        android:textColor="#FFFFFF"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_belk_num"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:layout_below="@+id/textView3"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/tv_mass"
        android:background="#030000"
        android:gravity="center"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_zhir_num"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:layout_below="@+id/textView4"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/tv_belk_num"
        android:background="#030000"
        android:gravity="center"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:layout_below="@+id/tv_eat"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/textView4"
        android:background="#030000"
        android:gravity="center"
        android:text="Углеводы"
        android:textColor="#FFFFFF"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_ugl_num"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:layout_below="@+id/textView5"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/tv_zhir_num"
        android:background="#030000"
        android:gravity="center"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="10sp" />

</RelativeLayout>