<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/productAdd_TextView"
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="Введи название продукта: "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/massNum_TextView"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/productName_EditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:text="Масса, г"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/proteinNum_TextView"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/massNum_TextView"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:text="Белки, г"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/fatNum_TextView"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/proteinNum_TextView"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:text="Жиры, г"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/carhydNum_TextView"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/fatNum_TextView"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:text="Углеводы, г"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/productName_EditText"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/productAdd_TextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/massNum_EditText"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/productName_EditText"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/massNum_TextView"
        android:inputType="numberDecimal">


    </EditText>

    <EditText
        android:id="@+id/proteinNum_EditText"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/massNum_EditText"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/massNum_TextView"
        android:inputType="numberDecimal">

    </EditText>

    <EditText
        android:id="@+id/fatNum_EditText"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/proteinNum_EditText"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/massNum_TextView"
        android:inputType="numberDecimal">

    </EditText>

    <EditText
        android:id="@+id/carhydNum_EditText"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/fatNum_EditText"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/massNum_TextView"
        android:inputType="numberDecimal">


    </EditText>

</RelativeLayout>